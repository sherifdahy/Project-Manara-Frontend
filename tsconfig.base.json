{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "environments": ["apps/shell/src/environments"],
      "system_admin/Module": [
        "apps/system_admin/src/app/remote-entry/entry-module.ts"
      ],
      "admin/Module": ["apps/admin/src/app/remote-entry/entry-module.ts"],
      "@project-manara-frontend/consts": ["libs/shared/consts/src/index.ts"],
      "@project-manara-frontend/ui": ["libs/shared/ui/src/index.ts"],
      "@project-manara-frontend/guards": ["libs/shared/guards/src/index.ts"],
      "@project-manara-frontend/interceptors": [
        "libs/shared/interceptors/src/index.ts"
      ],
      "@project-manara-frontend/services": [
        "libs/shared/services/src/index.ts"
      ],
      "@project-manara-frontend/models": ["libs/shared/models/src/index.ts"],
      "@project-manara-frontend/modules": ["libs/shared/modules/src/index.ts"],
      "@project-manara-frontend/utilities": [
        "libs/shared/utilities/src/index.ts"
      ],
      "roles_mfe/Module": [
        "apps/roles_mfe/src/app/remote-entry/entry-module.ts"
      ],
      "universities_mfe/Module": [
        "apps/universities_mfe/src/app/remote-entry/entry-module.ts"
      ],
      "auth_mfe/Module": ["apps/auth_mfe/src/app/remote-entry/entry-module.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
